# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	output_format = "i3bar"
	colors = false
        interval = 1
	markup = pango
	color_good = '#2f343f'
	color_degraded = '#ebcb8b'
	color_bad = '#ba5e57'
}

order += "ethernet _first_"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "volume master"
order += "tztime local"

ethernet _first_ {
        format_up = "<span background='#88c0d0'>[ Ethernet  %ip ]</span>"
        format_down = "<span background='#88c0d0'>[ Ethernet  Disconnected ]</span>"
        separator = false
        separator_block_width = 1
}

cpu_usage {
	format = "<span background='#0c7dee'>[ CPU  %usage ]</span>"
	max_threshold = 75
	separator = false
        separator_block_width = 1
}

memory {
        format = "<span background='#00df8a'>[ RAM  Used: %used Total: %available ]</span>"
        threshold_degraded = "1G"
        format_degraded = "<span background='#bb0000'>[  MEMORY < %available ]</span>"
	separator = false
        separator_block_width = 1
}

disk "/" {
        format = "<span background='#a1d569'>[ HDD  / %free Free ]</span>"
	separator = false
        separator_block_width = 1
}

volume master {
        format = "<span background='#0ceee7'>[  %volume ]</span>"
        format_muted = "<span background='#d70808'>[  Muted ]</span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
	separator = false
        separator_block_width = 1
}

tztime local {
	format = "<span background='#81a1c1'>[ %time ]</span>"
	format_time = " %a %-d %b %H:%M:%S"
	separator = false
        separator_block_width = 1
}
